<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:components="clr-namespace:Tirax.SshManager.Components"
        mc:Ignorable="d" Width="905" Height="680"
        x:Class="Tirax.SshManager.MainWindow"
        Title="Tirax.SshManager">
    <DockPanel>
        <Panel Height="72" DockPanel.Dock="Top">
            <components:SearchBar MaxWidth="360" Height="56" />
        </Panel>
        <RelativePanel>
            <TextBlock>Welcome to Avalonia!</TextBlock>
            <Button Width="56" Height="56" Margin="0,0,20,20" CornerRadius="16"
                    RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
                <materialIcons:MaterialIcon Kind="Add" Width="24" Height="24"></materialIcons:MaterialIcon>
            </Button>
        </RelativePanel>
    </DockPanel>
</Window>