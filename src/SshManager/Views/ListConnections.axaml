<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="clr-namespace:Tirax.SshManager.Components"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tirax.SshManager.Views.ListConnections">
    <DockPanel>
        <Panel Height="72" DockPanel.Dock="Top">
            <components:SearchBar MaxWidth="360" Height="56" />
        </Panel>
        <RelativePanel>
            <TextBlock>Welcome to Avalonia!</TextBlock>
            <Button Width="56" Height="56" Margin="0,0,20,20" CornerRadius="16"
                    RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
                <avalonia:MaterialIcon Kind="Add" Width="24" Height="24"></avalonia:MaterialIcon>
            </Button>
        </RelativePanel>
    </DockPanel>
</UserControl>